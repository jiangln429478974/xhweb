<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<jmxConfigurator />

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- 调试hibernate使用，将本次sql的参数打印的控制台中 -->
	<!-- <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="TRACE"/> -->
	<!-- 调试ehcache集群使用，将所有监控缓存的心跳打印到控制台中 -->
	<!-- <logger name="net.sf.ehcache" level="ALL"/> -->
	
	<appender name="rollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/nbggxy.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>logs/nbggxyo%d{yyyy-MM-dd}.log</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%d [%t] %-5p [%c:%L] - %m%n</pattern>
		</encoder>
	</appender>

	<root level="info">
		<appender-ref ref="console" />
		<appender-ref ref="rollingFile" />
	</root>
   
    
    <!-- project default level     -->
    <logger name="com.cssnb" level="DEBUG" />
    <logger name="ch.qos.logback" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
    <logger name="org.springframework" level="info"/>
    <logger name="org.springframework.web" level="info"/>
    <logger name="org.apache.shiro" level="WARN"/>
    <logger name="org.apache.ibatis" level="INFO"/>
    <logger name="org.mybatis" level="INFO"/>
    <logger name="net.sf.ehcache" level="WARN"/>
    <logger name="org.apache.commons" level="WARN"/>
    <logger name="org.jboss" level="WARN"/>
    <logger name="com.github.miemiedev" level="WARN"/>
</configuration>