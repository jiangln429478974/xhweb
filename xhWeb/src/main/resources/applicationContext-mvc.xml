		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context.xsd">

	<description>Spring MVC 3配置 </description>

	<!-- 自动扫描且只扫描@Controller -->
	<context:component-scan base-package="com.cssnb" use-default-filters="false">
		<context:include-filter type="annotation" expression="org.springframework.stereotype.Controller" />
	</context:component-scan>
	
	<import resource="classpath:springmvc-resteasy.xml" />
	<!-- <mvc:view-controller path="/" view-name="redirect:/account/user/list" /> -->

	<!-- 使用缓存mvc注解配置 -->
	<mvc:annotation-driven>
		<!-- 配置StringHttpMessageConverter当@ResponseBody 时中文正常显示 -->
		<mvc:message-converters>
            <!-- 避免IE执行AJAX时,返回JSON出现下载文件 -->
            <bean id="fastJsonHttpMessageConverter" class="com.alibaba.fastjson.support.spring.FastJsonHttpMessageConverter">
                <property name="supportedMediaTypes">
                    <list>
                        <!-- 这里顺序不能反，一定先写text/html,不然ie下出现下载提示 -->
                        <value>text/html;charset=UTF-8</value>
                        <value>application/json;charset=UTF-8</value>
                    </list>
                </property>
            </bean>
		</mvc:message-converters>
	</mvc:annotation-driven>

	<!-- spring mvc 的资源路径 -->
	<mvc:resources mapping="/resources/**" location="/resources/" />
    <!--  -->
    <mvc:annotation-driven />
    <!-- 激活组件扫描功能,在包com.gcx及其子包下面自动扫描通过注解配置的组件 -->
